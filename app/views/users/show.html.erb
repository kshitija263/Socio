
   
    <div id="notice"><%= notice %></div>

<div style="width:60%; margin:auto; color: white;" class="container">
      
       <div style="padding:30px;" class="card indigo lighten-1">
           <div class="row">
               <div class="card-title">
                   <p>User Details</p>
               </div>
           </div>

           <div class="row">
               <p>
                  <strong>Name:</strong>
                      <%= @user.name %>
               </p>
           </div>

            <div class=" row">
               <p>
                  <strong>Email:</strong>
                   <%= @user.email %>
               </p>
           </div>

           <div class=" row">
               <p>
                  <strong>Gender:</strong>
                   <%= @user.gender %>
               </p>
           </div>
           <div class=" row">
               <p>
                  <strong>Phone:</strong>
                   <%= @user.phone %>
               </p>
           </div>   
       </div>
       
<p>
<%= image_tag(@user.picture_url, :width => 140 ,:height => 210) if @user.picture.present? %>
</p>
            <%= link_to 'Edit', edit_user_path(@user) %> |
            <%= link_to 'Back', users_path %>
</div>


